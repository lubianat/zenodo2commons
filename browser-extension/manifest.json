{
  "manifest_version": 3,
  "name": "Zenodo to Commons",
  "version": "1.0.0",
  "description": "Add a 'Send to Commons' button on Zenodo pages to easily upload files to Wikimedia Commons",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://zenodo.org/*",
        "https://*.zenodo.org/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [],
  "host_permissions": [
    "https://zenodo.org/*"
  ]
}
